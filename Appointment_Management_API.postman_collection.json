        {
          "name": "Update Appointment",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"appointmentDate\": \"2025-11-07\",\n  \"startTime\": \"15:00\",\n  \"endTime\": \"15:30\",\n  \"note\": \"Rescheduled by patient\",\n  \"status\": \"rescheduled\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/appointments/:id",
              "host": ["{{base_url}}"],
              "path": ["appointments", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "appointment_id_here",
                  "description": "Appointment ID"
                }
              ]
            },
            "description": "Update appointment details. Google Calendar event will be updated automatically."
          },
          "response": []
        },
        {
          "name": "Cancel Appointment",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"cancelled\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/appointments/:id",
              "host": ["{{base_url}}"],
              "path": ["appointments", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "appointment_id_here",
                  "description": "Appointment ID"
                }
              ]
            },
            "description": "Cancel an appointment. Google Calendar event will be deleted."
          },
          "response": []
        },
        {
          "name": "Delete Appointment",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/appointments/:id",
              "host": ["{{base_url}}"],
              "path": ["appointments", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "appointment_id_here",
                  "description": "Appointment ID"
                }
              ]
            },
            "description": "Permanently delete an appointment"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Slots",
      "item": [
        {
          "name": "Get All Slots",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/slots",
              "host": ["{{base_url}}"],
              "path": ["slots"]
            },
            "description": "Get all available slots"
          },
          "response": []
        },
        {
          "name": "Get Available Slots",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/slots?available=true",
              "host": ["{{base_url}}"],
              "path": ["slots"],
              "query": [
                {
                  "key": "available",
                  "value": "true",
                  "description": "Filter only available (not booked) slots"
                }
              ]
            },
            "description": "Get only available slots for booking"
          },
          "response": []
        },
        {
          "name": "Get Slots by Date",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/slots?date=2025-11-02&available=true",
              "host": ["{{base_url}}"],
              "path": ["slots"],
              "query": [
                {
                  "key": "date",
                  "value": "2025-11-02",
                  "description": "Filter by date (YYYY-MM-DD)"
                },
                {
                  "key": "available",
                  "value": "true",
                  "description": "Only show available slots"
                }
              ]
            },
            "description": "Get available slots for a specific date - useful for voice AI to check availability"
          },
          "response": []
        },
        {
          "name": "Create Single Slot",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"date\": \"2025-11-10\",\n  \"startTime\": \"09:00\",\n  \"endTime\": \"09:30\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/slots",
              "host": ["{{base_url}}"],
              "path": ["slots"]
            },
            "description": "Create a single time slot"
          },
          "response": []
        },
        {
          "name": "Create Bulk Slots",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"startDate\": \"2025-11-10\",\n  \"endDate\": \"2025-11-15\",\n  \"excludeWeekends\": true,\n  \"timeSlots\": [\n    { \"startTime\": \"09:00\", \"endTime\": \"09:30\" },\n    { \"startTime\": \"09:30\", \"endTime\": \"10:00\" },\n    { \"startTime\": \"10:00\", \"endTime\": \"10:30\" },\n    { \"startTime\": \"10:30\", \"endTime\": \"11:00\" },\n    { \"startTime\": \"14:00\", \"endTime\": \"14:30\" },\n    { \"startTime\": \"14:30\", \"endTime\": \"15:00\" },\n    { \"startTime\": \"15:00\", \"endTime\": \"15:30\" },\n    { \"startTime\": \"15:30\", \"endTime\": \"16:00\" }\n  ]\n}"
            },
            "url": {
              "raw": "{{base_url}}/slots/bulk",
              "host": ["{{base_url}}"],
              "path": ["slots", "bulk"]
            },
            "description": "Create multiple slots across date range"
          },
          "response": []
        },
        {
          "name": "Delete Slot",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/slots/:id",
              "host": ["{{base_url}}"],
              "path": ["slots", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "slot_id_here",
                  "description": "Slot ID"
                }
              ]
            },
            "description": "Delete a slot (only if not booked)"
          },
          "response": []
        }
      ]
    },
