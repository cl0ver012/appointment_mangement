{
  "info": {
    "name": "Appointment Management API",
    "description": "Healthcare appointment management system with voice AI integration support",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:5000/api",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "item": [
        {
          "name": "Check API Health",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/health",
              "host": ["{{base_url}}"],
              "path": ["health"]
            },
            "description": "Check if the API is running and healthy"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Appointments",
      "item": [
        {
          "name": "Get All Appointments",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/appointments",
              "host": ["{{base_url}}"],
              "path": ["appointments"]
            },
            "description": "Retrieve all appointments"
          },
          "response": []
        },
        {
          "name": "Get Appointments by Email",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/appointments?email=john.smith@email.com",
              "host": ["{{base_url}}"],
              "path": ["appointments"],
              "query": [
                {
                  "key": "email",
                  "value": "john.smith@email.com",
                  "description": "Filter by patient email"
                }
              ]
            },
            "description": "Get appointments for a specific patient"
          },
          "response": []
        },
        {
          "name": "Get Appointments by Date",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/appointments?date=2025-11-02",
              "host": ["{{base_url}}"],
              "path": ["appointments"],
              "query": [
                {
                  "key": "date",
                  "value": "2025-11-02",
                  "description": "Filter by date (YYYY-MM-DD)"
                }
              ]
            },
            "description": "Get appointments for a specific date"
          },
          "response": []
        },
        {
          "name": "Get Appointments by Status",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/appointments?status=scheduled",
              "host": ["{{base_url}}"],
              "path": ["appointments"],
              "query": [
                {
                  "key": "status",
                  "value": "scheduled",
                  "description": "Filter by status (scheduled, completed, cancelled, rescheduled)"
                }
              ]
            },
            "description": "Get appointments by status"
          },
          "response": []
        },
        {
          "name": "Get Single Appointment",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/appointments/:id",
              "host": ["{{base_url}}"],
              "path": ["appointments", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "appointment_id_here",
                  "description": "Appointment ID"
                }
              ]
            },
            "description": "Get a specific appointment by ID"
          },
          "response": []
        },
        {
          "name": "Create Appointment",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userEmail\": \"patient@example.com\",\n  \"appointmentDate\": \"2025-11-05\",\n  \"startTime\": \"14:00\",\n  \"endTime\": \"14:30\",\n  \"note\": \"Annual checkup - scheduled by voice AI\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/appointments",
              "host": ["{{base_url}}"],
              "path": ["appointments"]
            },
            "description": "Create a new appointment. Will automatically create Google Calendar event if configured."
          },
          "response": []
        },
        {
          "name": "Create Appointment (Voice AI Example)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userEmail\": \"voice.ai.patient@email.com\",\n  \"appointmentDate\": \"2025-11-06\",\n  \"startTime\": \"10:00\",\n  \"endTime\": \"10:30\",\n  \"note\": \"Flu symptoms. Scheduled via voice AI assistant.\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/appointments",
